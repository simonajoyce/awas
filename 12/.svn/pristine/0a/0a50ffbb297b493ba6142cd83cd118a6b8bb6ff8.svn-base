<?xml version="1.0" encoding="UTF-8"?>
<xapi:requestset xmlns:xapi="http://xmlns.oracle.com/oxp/xapi">
    <xapi:globalData location="stream"/>
<!-- AWASARINVOICES Bursting File -->
<!-- Initial Delivery save Invoice to file System-->
    <xapi:request select="/NEWRAXINVPDF/LIST_G_ORDER_BY/G_ORDER_BY/LIST_G_INVOICE/G_INVOICE">
        <xapi:delivery>
            <xapi:filesystem id="file1" output="/u01/app/oracle/apps/apps_st/appl/awcust/12.0.0/out/Stmts/${ALS_CODE}-${BILL_TO_LOCATION}-${NAME1}-${TRX_DATE}-${TRX_NUMBER}.pdf"/>
        </xapi:delivery>
        <xapi:document key="" output-type="pdf" delivery="123">
            <xapi:template type="rtf"
                location="/u01/app/oracle/apps/apps_st/appl/awcust/12.0.0/reports/US/Invoice.rtf" filter=""/>
        </xapi:document>
    </xapi:request>
<!-- This second delivery email invoice to Cstomer and copies AWAS staff -->
    <xapi:request select="/NEWRAXINVPDF/LIST_G_ORDER_BY/G_ORDER_BY">
        <xapi:delivery>
            <xapi:email server="DUBMMA01" server-alias="" proxy=""
                port="25" from="receivables@awas.com" reply-to="${REPLY_TO}">
                 <xapi:message id="555" to="${EMAIL}" cc=""  		
                    bcc="receivables@awas.com,natalia.kenny@awas.com"
                    attachment="true" subject="${TRX_PERIOD} Invoice - ${BILL_CUST_NAME}">Dear Sir/Madam, 

Please find your ${NAME1} for ${TRX_PERIOD} attached. 

${EMAIL_COMMENTS}

Please email receivables@awas.com if you have any questions.


Regards,

	${SENDER} 

AWAS | Block B Riverside IV Sir John Rogerson's Quay Dublin 2 Ireland
Direct: +353 1 635 5000 

Copies To:${EMAIL}

</xapi:message>
                <xapi:authentication username="awas" password="awas_175"/>
            </xapi:email>
        </xapi:delivery>
        <xapi:document key="${TRX_PERIOD}-${NAME1}-${ALS_CODE}"
            output-type="pdf" delivery="555">
            <xapi:template type="rtf"
                location="/u01/app/oracle/apps/apps_st/appl/awcust/12.0.0/reports/US/Invoice.rtf" filter=""/>
        </xapi:document>
    </xapi:request>
<!-- This final Delivery simply sends the email to Dolores and diplays the email addresses it was forwarded to previously -->
       <xapi:request select="/NEWRAXINVPDF/LIST_G_ORDER_BY/G_ORDER_BY/LIST_G_INVOICE/G_INVOICE">
        <xapi:delivery>
            <xapi:email server="DUBMMA01" server-alias="" proxy=""
                port="25" from="receivables@awas.com" reply-to="${REPLY_TO}">
                <xapi:message id="666" to="dolores.malone@awas.com" cc=""
                    bcc=""
                    attachment="true" subject="XXINVOICEXX - ${TRX_PERIOD} Invoice - ${TRX_NUMBER} ${BILL_CUST_NAME}">Customer Email = ${EMAIL}
		    Dear Sir/Madam, 

Please find your ${NAME1} for ${TRX_PERIOD} attached. 

${EMAIL_COMMENTS}

Please email receivables@awas.com if you have any questions.


Regards,

	${SENDER} 

AWAS | Block B Riverside IV Sir John Rogerson's Quay Dublin 2 Ireland
Direct: +353 1 635 5000 


</xapi:message>
                <xapi:authentication username="awas" password="awas_175"/>
            </xapi:email>
        </xapi:delivery>
        <xapi:document key="${TRX_PERIOD}-${NAME1}-${ALS_CODE}"
            output-type="pdf" delivery="666">
            <xapi:template type="rtf"
                location="/u01/app/oracle/apps/apps_st/appl/awcust/12.0.0/reports/US/Invoice.rtf" filter=""/>
        </xapi:document>
    </xapi:request>
</xapi:requestset>
